<div class="page-header">
  <h1>New Slot</h1>
</div>

<%= form_tag(slots_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :user_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :course_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :course_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :paid, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :paid, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :available, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :available, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Slot", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
